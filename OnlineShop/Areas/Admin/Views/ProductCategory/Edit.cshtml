@model Model.EntityFramework.ProductCategory

@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Cập nhật danh mục
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cập nhật danh mục
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "help-block text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "help-block text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MetaTitle)
                                @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "help-block text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ParentID)
                                @Html.DropDownListFor(model => model.ParentID, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "help-block text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DisplayOrder)
                                @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "help-block text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-sm-3" })
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.Status)
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "help-block text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-0 col-sm-12">
                                    <input type="submit" value="Cập nhật" class="btn btn-default" />
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

