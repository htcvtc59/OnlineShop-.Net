@model PagedList.IPagedList<Model.EntityFramework.OrderBy>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Hóa đơn
}
@section jsFooter{
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var user = {
            init: function () {
                user.registerEvents();
            },
            registerEvents: function () {
                $('.unblock').off('click').on('click', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var id = btn.data('id');
                    $.ajax({
                        url: "/Admin/OrderBy/ChangeStatus",
                        data: { id: id },
                        dataType: "json",
                        type: "POST",
                        success: function (response) {
                            console.log(response);
                            if (response.status == true) {
                                btn.text('Đã thanh toán');
                            } else {
                                btn.text('Chưa thanh toán');
                            }
                        }
                    });

                });
            }
        }
        user.init();
    </script>

   
}

<div class="row">
    <div class="col-sm-12" id="DetailBills">

    </div>
    <div class="col-sm-5">
        @using (Html.BeginForm("Index", "OrderBy", FormMethod.Get))
        {
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-10">
                        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search">
                    </div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-info">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Hóa đơn
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ngày tạo</th>
                                <th>Người nhận</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.ID</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ShipName</td>
                                    <td>@item.ShipMobile</td>
                                    <td>@item.ShipAddress</td>
                                    <td><a href="#" class="btn btn-success unblock" data-id="@item.ID">@Html.Raw(item.Status ? "Đã thanh toán" : "Chưa thanh toán")</a></td>
                                    <td>
                                        @Ajax.ActionLink("Xem chi tiết", "ViewDetail", "Bills", new { @idbills = item.ID }, new AjaxOptions()
                                   {
                                       HttpMethod = "GET",
                                       UpdateTargetId = "DetailBills",
                                       InsertionMode = InsertionMode.Replace

                                   }, new { @class = "btn btn-primary" })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
